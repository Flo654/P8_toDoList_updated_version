{% extends 'base.html.twig' %}

{% block header_title %}
    <h1 class="text-center">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}

    <div class="">
        {% if app.user %}
            <a href="{{ path('task_create') }}" class="btn btn-success">Créer une nouvelle tâche</a>
        {% endif %}
        <a href="{{ path('task_list', {'optionList' : 'tasksToDo' }) }} " class="btn btn-info">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_list', {'optionList' : 'tasksDone' }) }}" class="btn btn-warning">Consulter la liste des tâches terminées</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('user_list') }}" class="btn btn-outline-primary">Liste des utilisateurs</a>
        {% endif %}
    </div>
{% endblock %}
